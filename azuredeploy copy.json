{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "managedIdentityResourceGroup": {
            "type": "string"
        },
        "managedIdentityName": {
            "type": "string"
        },
        "utc": {
            "type": "string",
            "defaultValue": "[utcNow()]"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deploymentScripts",
            "apiVersion": "2020-10-01",
            "name": "SetPermissions",
            "location": "[resourceGroup().location]",
            "kind": "AzurePowerShell",
            "identity": {
                "type": "UserAssigned",
                "userAssignedIdentities": {
                    "[resourceId(parameters('managedIdentityResourceGroup'), 'Microsoft.ManagedIdentity/userAssignedIdentities', parameters('managedIdentityName'))]": {}
                }
            },
            "properties": {
                "forceUpdateTag": "[parameters('utc')]",
                "azPowerShellVersion": "5.4",
                "primaryScriptUri": "https://raw.githubusercontent.com/SecureHats/miaow/main/clash.ps1",
                "supportingScriptUris": [],
                "timeout": "PT30M",
                "cleanupPreference": "Always",
                "retentionInterval": "P1D",
                "containerSettings": {
                    "containerGroupName": "miaow"
                }
            }
        }
    ]
}
